<div class='row'>
 <%= render 'users/admin_nav' %>


  <div class='col-sm-9'>
    <div class='lessons dashboard'>
      <h2> Lessons </h2>        
      <%= link_to 'New Lesson', new_lesson_path, class: 'btn btn-primary' %> 
        <table id='lessons' class='table table-striped'>
          <thead>
            <tr>
              <th class ='left'>TOPIC</th>
              <th>LEVEL</th>
              <th>BELT</th>
              <th>QUESTIONS</th>
              <th></th>
            </tr>
          </thead>
          <tbody class='main-tbody' data-update-url="<%= sort_lessons_url %>">
          <% @belt_lessons.each do |belt,lessons| %>
          <tbody>
            <tr class='header <%=belt.belt%>'><td colspan = "5"><%=belt.belt.capitalize%></td><tr>
            <% lessons.each do |lesson| %>
              <tr id="<%= lesson.id %>" data-color='<%= belt.belt %>'class='lesson'>
                <td><%=lesson.id%><%= link_to lesson.title, lesson_path(lesson) %></td>
                <td><%= lesson.level %></td>
                <td><%= lesson.belt.belt %></td>
                <td><%= lesson.questions.size %></td>
                <td>
                  <%= link_to "<i class='fa fa-trash-o'></i>".html_safe, lesson_path(lesson), method: :delete, data: { confirm: 'You are about to delete a lesson. This is irreversible. Are you sure?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
          <% end %>
          </tbody>
        </table>
  </div>
  
</div>