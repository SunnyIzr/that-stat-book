<div class='row'>
   <%= render 'pages/pages_mobile_nav' %>
</div>

<div class='container'>
  <div class='ninja'>
    <%= image_tag('ninja.png') %>
  </div>
  <div class='sign_up'>
    <div class='sign_up_content'>
      <div class='logo hidden-xs'>
        <%= image_tag('signup_logo.png', class: 'img-responsive') %>
      </div>
      <h2>Welcome Back!.</h2>
      <p class='desc'>If you don't already have a StatsDojo account <%= link_to 'sign up', new_user_registration_path %>.</p>

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        
        <div class='email'>
          <p class='signup_label'>EMAIL</p>
          <%= f.email_field :email, :autofocus => true, :placeholder => 'Email Address', class: 'full' %>
        </div>
        
        <div class='password'>
          <p class='signup_label'>PASSWORD</p>
          <%= f.password_field :password, :placeholder => 'Password', class: 'full' %>
        </div>

        <div class='submit'>
          <%= f.submit "LOGIN", class: 'btn btn-primary btn-md' %><br/>
          <%= link_to "Forgot your password?", new_password_path(:user) %>
        </div>
      <% end %>

    </div>
  
  </div>
</div>
