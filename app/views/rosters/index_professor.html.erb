<div class='row'>
 <%= render 'users/prof_nav' %>
 
 <div class='col-sm-9'>
  <div class='lessons dashboard'>
    <h2> My Classes </h2>        
    <%= link_to 'New Class', new_roster_path, class: 'btn btn-primary' %> 
    <table id='lessons' class='table table-striped'>
      <thead>
        <tr>
          <th class ='left'>CLASS</th>
          <th>VIDEO VIEWS</th>
          <th>QUIZ ATTEMPTS</th>
          <th>QUESTIONS</th>
          <th>STUDENTS</th>
        </tr>
      </thead>
      <tbody data-update-url="<%= sort_lessons_path %>">
        <% @roster_stats.each do |roster| %>
        <tr id="roster_<%= roster[0].id %>">
          <td><%= link_to roster[0].title, roster_path(roster[0]) %></td>
          <td><%= roster[1][:view_count] %></td>
          <td><%= roster[1][:quiz_attempts] %></td>
          <td><%= percent(roster[1][:avg_score]) %></td>
          <td><%= roster[0].users.size %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>